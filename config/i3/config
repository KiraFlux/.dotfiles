# ~/.config/i3/config
# Основные настройки
set $mod Mod4
set $scripts /home/kiraflux/.dotfiles/scripts
font pango:monospace 10

# Автозапуск
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- $scripts/lock.sh
exec --no-startup-id nm-applet
exec --no-startup-id udisksctl mount -b /dev/sd*

# Управление окнами
floating_modifier $mod
tiling_drag modifier titlebar

# Рабочие пространства
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Запуск приложений
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+f exec firefox
bindsym $mod+Shift+e exec --no-startup-id dmenu_run -p "PCManFM: " -c -l 10 && $scripts/pcmanfm-dark.sh

bindsym $mod+d exec --no-startup-id dmenu_run -b
bindsym $mod+space exec --no-startup-id $scripts/layout.sh

# lock
bindsym $mod+l exec $scripts/lock.sh

# Окна и контейнеры
bindsym $mod+c kill
bindsym $mod+f fullscreen toggle
bindsym $mod+v split v
bindsym $mod+h split h

# Фокус и перемещение
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Рабочие пространства (переключение)
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Рабочие пространства (перемещение окон)
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Звук (PulseAudio)
set $refresh_i3status killall -SIGUSR1 i3status
# Звук
bindsym XF86AudioRaiseVolume exec --no-startup-id $scripts/volume.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id $scripts/volume.sh down
bindsym XF86AudioMute exec --no-startup-id $scripts/volume.sh toggle

# Яркость
bindsym XF86MonBrightnessUp exec --no-startup-id $scripts/light.sh up
bindsym XF86MonBrightnessDown exec --no-startup-id $scripts/light.sh down

# Скриншоты
# bindsym Print exec --no-startup-id $scripts/screenshot.sh active
bindsym Print exec --no-startup-id $scripts/screenshot.sh full
bindsym Shift+Print exec --no-startup-id $scripts/screenshot.sh area

# Сохранение в файл
# bindsym $mod+Print exec --no-startup-id $scripts/screenshot.sh active save
bindsym $mod+Print exec --no-startup-id $scripts/screenshot.sh full save
bindsym $mod+Shift+Print exec --no-startup-id $scripts/screenshot.sh area save

# Режим изменения размера
set $resize_step 10
mode "resize" {
    bindsym Left resize grow width $resize_step px or $resize_step ppt
    bindsym Right resize shrink width $resize_step px or $resize_step ppt

    bindsym Down resize shrink height $resize_step px or $resize_step ppt
    bindsym Up resize grow height $resize_step px or $resize_step ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Управление i3
bindsym $mod+Shift+r restart
bindsym $mod+Shift+x exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Панель статуса
bar {
    position top
    status_command i3status
    colors {
        background #181517ff
        statusline #bcebcaff
        separator  #552c53ff
    }
}
